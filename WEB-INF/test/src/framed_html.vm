#macro(writeMenu $node)
	#if ($node.isFolder())
	$!Util.markStrongTest($node)
        <h5>
          $!Util.markStrongStart($node.path, $targetPath)<a href="${baseHref}/$node.path.relativePath">$Util.getIndexLrdTitle($node.path)</a>$!Util.markStrongEnd($node.path, $targetPath)
        </h5>
        <ul>
		#foreach ($child in $node.subNodes)
		  #if ($child.isFolder() || ($Util.isLrd($child.path) && !$Util.isIndex($child.path)))
          <li>
			#writeMenu($child)
		  </li>
		  #end
		#end
		</ul>
	#else
		$!Util.markStrongStart($node.path, $targetPath)<a href="${baseHref}/$!Util.getHtmlPath($node.path)">$!Util.getLrdTitle($node.path)</a>$!Util.markStrongEnd($node.path, $targetPath)
	#end
#end

<html>
<head>
  <title>$!title</title>
  <link rel="alternate" type="application/rss+xml" title="RSS" href="http://www.limy.org/limyweb-lrd/rss.action">
  <style type="text/css" media="all">
	@import url("$!{baseUrl}/style/maven-base.css");
	@import url("$!{baseUrl}/style/maven-theme.css");
	@import url("$!{baseUrl}/style/limy-theme.css");
  </style>
  <link rel="stylesheet" href="$!{baseUrl}/style/print.css" type="text/css" media="print"></link>
  <meta http-equiv="Content-Type" content="text/html; charset=$charset"></meta>
  <meta name="author" content="Naoki Iwami"></meta>
  <script src="/script/framemenu.js" type="text/javascript"></script>
  <script src="/limyweb-lrd/dwr/interface/Dwr.js"></script>
  <script src="/limyweb-lrd/dwr/engine.js"></script>
  <script src="/limyweb-lrd/dwr/util.js"></script>
</head>

<body class="composite">

  <div id="banner">
    <table width="100%">
      <tr>
        <td><h1>$!title</h1></td>
        <td align="right" valign="top"><h4><a href="/">Unlimited Island</a></h4></td>
      </tr>
    </table>
  </div>

##  <div>
    <div id="search">
      <form action="http://www.google.co.jp/search">
        <a style="vertical-align: top;" href="/limyweb/bbs.do?bid=3">BBS（質問板）</a>　　　　##
        <input type="hidden" name="sitesearch" value="www.limy.org">
        <input id="q" name="q">
        <input type="submit" id="btnG" value="Search by Google">
      </form>
    </div>
##  </div>

  <div id="leftColumn">
    <div align="right"><a href="javascript:minimize()"><img id="frameSizeBtn" border="0" src="/images/minimize.png" alt="minimize" title="minimize"></a></div>
    <div id="navcolumn">
      <div id="menuOverview">
		#writeMenu($menuNodes)
      </div>
      <div align="right"><a href="javascript:showFullMenu()"><img id="showFullBtn" border="0" src="/images/expand.png" alt="expand/collapse" title="show full menu"></a></div>
    </div>
  </div>

  <div id="bodyColumn">
    <div class="contentBox">
    	$mainContents
    </div>
  </div>

  <div id="footer">
	<div align="center">
    #if ($lastUpdate)
	    Last update $lastUpdate&nbsp;&nbsp;&nbsp;&nbsp;
    #end
    Generated by Lrd-engine
    </div>

	<div id="login" align="right">
      <form action="http://www.limy.org/limyweb-lrd/lrd.action" method="post">
        <input type="hidden" name="lrdPath" value="$lrdPath">
        <input type="submit" id="btnG" value="edit">
      </form>
    </div>

    <div class="xright">${startYear}-${nowYear}, $author</div>
    
    <div class="clear"><hr></hr></div>
  </div>

</body>
</html>
